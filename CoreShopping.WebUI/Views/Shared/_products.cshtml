@model Product

<div class="col-md-4 mb-2">
    <div class="card">
        <img src="~/img/image0.jpg" class="card-img-top" alt="">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <small>
                <i class="fa-solid fa-turkish-lira-sign"></i> @Model.Price
            </small>
        </div>
        <div class="card-footer text-center">

            <a asp-controller="Shop" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-sm float-start">Details</a>
            <a   href="#" class="btn btn-outline-primary btn-sm float-end">Add To Cart</a>
        </div>
    </div>
</div>

